@{
    ViewBag.Title = "Agregar_Linea_Telefonica";
}

<h2><b class="navbar navbar-expand-md text-decoration-underline">☎️ Agrega una linea telefonica</b></h2>
<br />
<div class="form-horizontal">

    <form action="~/Home/Index" method="post" style="padding-left:50px">
        <div class="row">
            <div class="col-md-12">
                <h3>Datos de la linea telefonica</h3>
            </div>
        </div>

        <h4></h4>

        <div class="row">
            <div class="col-md-2">
                <label>Full name:</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control " required="required" placeholder="*" />
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-2">
                <label>Departament:</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control " required="required" placeholder="*" />
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-2">
                <label>Extention:</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control " required="required" placeholder="*" />
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-2">
                <label>Access Code:</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control " required="required" placeholder="*" />
            </div>
            <div class="offset-md-4 col-md-2">
                <label style="color:red">*Campos obligatorios</label>
            </div>
        </div>

        <br /> <br />
        <div class="row">
            <div class="offset-md-4 col-md-1">
                <input type="submit" value="Registrar Linea" class="btn btn-success" />
            </div>
            <div class="offset-md-1 col-md-2">
                <a href="~/Administration/Agregar_Linea_Telefonica" class="btn btn-danger">Limpiar Datos</a>
            </div>
        </div>
    </form>

</div>