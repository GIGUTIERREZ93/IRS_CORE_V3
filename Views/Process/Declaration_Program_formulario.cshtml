
@{
    ViewBag.Title = "Declaration_Program_formulario";
}

<h2>Registro de Programas de Produccion</h2>
<hr />
<form class="g-3 gx-5 gy-5" method="post" action="~/Process/Declation_Program_Insertar">
    <div class="container-fluid">
        <div class="row">

            <input type="hidden" name="mcid" value="1" />


            <!--SELECCION DE LINEA TOMANDO 5 COLUMNAS col-5 -->
            <div class="col-md-3">
                <label class="fs-4 fw-bold" for="Line">Linea de SMT:</label>
                <select class="form-control form-select" name="Line" required>
                    <option value="" disabled selected>Seleccione...</option>
                    @foreach (var l in ViewBag.Linea)
                    {
                        <option value="@l.SMT">@l.SMT </option>
                    }
                    <!--<option disabled selected>Seleccione....</option>-->
                </select>
            </div>
            <div class="col-md-5">
                <label class="fs-4 fw-bold" for="Program">Nombre del Programa:</label>
                <input type="text" class="form-control" name="Program" placeholder="Ejemplo >> 179_AB_C1_BOT" required/>
            </div>
            <div class="col-md-4">
                <label class="fs-4 fw-bold" for="Noblock"># de PCB dentro del Panel:</label>
                <input type="text" class="form-control" name="Noblock" placeholder="#piezas + 1" required />
            </div>

        </div>
        <br />
        <div class="row">

            <div class="col-md-3">
                <label class="fs-4 fw-bold" for="NIP">Codigo NIP:</label>
                <input type="text" class="form-control" name="NIP" required/>
            </div>
            <div class="col-md-5">
                <label class="fs-4 fw-bold" for="Suffix">Sufijo del Programa (Top/Botton):</label>
                <select class="form-control form-select" name="Suffix" required>
                    <option value="" disabled selected>Seleccione....</option>
                    <option>_T</option>
                    <option>_B</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="fs-4 fw-bold" for="PartNumber">Numero de Parte:</label>
                <input type="text" class="form-control" name="PartNumber" required />
            </div>

        </div>
        <br />

        <div class="row">


            <div class="col-md-3">
                <label class="fs-4 fw-bold" for="Assy_Line">Linea de Ensamble:</label>
                <select class="form-control form-select" name="Assy_Line" >
                    <option value="" disabled selected>Seleccione....</option>
                    @foreach (var a in ViewBag.Assy_Line)
                    {
                        <option class="order-first" value="@a">@a  </option>
                    }
                </select>
            </div>
            <div class="col-md-5">
                <label class="fs-4 fw-bold" for="CycleTime">Tiempo Ciclo (minutos):</label>
                <input type="text" class="form-control" name="CycleTime" placeholder="Ejemplo >> 0.251" />
            </div>
            <div class="col-md-4">
                <label class="fs-4 fw-bold" for="PzsHr">Piezas X Hora:</label>
                <input type="text" class="form-control" name="PzsHr" />
            </div>
        </div>
        <br />
        <div class="row">


            <div class="col-md-3">
              
                
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-2 ">
                <input type="submit" value="Crear" class="btn btn-success fs-4" name="name" />
             
            </div>
            <div class="col-2 ">
             
                <input type="reset" value="Resetear" class="btn btn-dark fs-4" name="name" />
            </div>  
        </div>
    </div>
</form>






