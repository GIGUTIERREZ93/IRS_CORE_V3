
@{
    ViewBag.Title = "Declaration_Programs";
}

<h1 class="text-primary fw-bold">Programas de Producción</h1>
<hr />
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-md">
        <a href=@Url.Action("Declaration_Program_formulario" , "Process") class="btn btn-success fs-5">Nuevo programa</a>
    </div>
</nav>
<br />

<div class="container">
    <tr class="table-primary">
        <td colspan="11">
            <input id="searchTerm" onkeyup="doSearch()" type="text" class="form-control" placeholder="Escriba algo para filtrar" />
        </td>
    </tr>
    <br />
    <table class="table table-striped table-bordered" id="tabla_desplegada">
        <thead>
            <tr class="table-primary">
                <th scope="col">RecordID</th>
                <th scope="col">ID SMT</th>
                <th scope="col">Programa</th>
                <th scope="col">PCBs Panel</th>
                <th scope="col">NIP Code</th>
                <th scope="col">Suffix</th>
                <th scope="col">Num. de Parte</th>
                <th scope="col">SMT</th>
                <th scope="col">Linea Ensamble</th>
                <th scope="col">Tiempo Ciclo</th>
                <th scope="col">PzsHr</th>
                <th scope="col">Operaciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.RecordID</td>
                    <td>@x.McID</td>
                    <td>@x.Program</td>
                    <td>@x.Noblock</td>
                    <td>@x.NIP</td>
                    <td>@x.Suffix</td>
                    <td>@x.PartNumber</td>
                    <td>@x.Line</td>
                    <td>@x.Assy_Line</td>
                    <td>@x.CycleTime</td>
                    <td>@x.PzsHr</td>
                    <td>
                        @Html.ActionLink("Editar ", "Declation_Program_Editar_formulario", "Process", new { dato = x.RecordID }, null)
                        @Html.ActionLink(" | Eliminar", "Declation_Program_Eliminar", "Process", new { dato = x.RecordID }, null)
                    </td>
                </tr>
            }
        </tbody>
        <tr class="noSearch hide fw-bold">
            <td colspan="11"></td>
        </tr>
    </table>
</div>
<script src="~/Scripts/Buscar.js"></script>

